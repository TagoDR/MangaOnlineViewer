{
    "name": "mangaonlineviewer",
    "description": "Userscript that helps to read Manga faster by loading all the pages at once",
    "version": "30.0.0",
    "scripts": {
        "start": "vite",
        "dev": "vite build --mode development",
        "build": "gulp dev",
        "release": "gulp release"
    },
    "author": "TagoDR",
    "license": "MIT",
    "type": "module",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TagoDR/MangaOnlineViewer.git"
    },
    "keywords": [
        "manga",
        "reader",
        "viewer",
        "online",
        "loader"
    ],
    "bugs": "https://github.com/TagoDR/MangaOnlineViewer/issues",
    "homepage": "https://github.com/TagoDR/MangaOnlineViewer#readme",
    "devDependencies": {
        "@types/file-saver": "^2.0.5",
        "@types/imagesloaded": "^4.1.2",
        "@types/lodash": "^4.14.191",
        "@types/node": "^18.11.12",
        "@types/nprogress": "^0.2.0",
        "@types/tampermonkey": "^4.0.5",
        "@types/tinycolor2": "^1.4.3",
        "@typescript-eslint/eslint-plugin": "^5.46.0",
        "@typescript-eslint/parser": "^5.46.0",
        "del": "^7.0.0",
        "eslint": "^8.29.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "^3.5.2",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "gulp": "^4.0.2",
        "gulp-preprocess": "^4.0.2",
        "prettier": "^2.8.1",
        "rollup-plugin-external-globals": "^0.7.1",
        "ts-import": "^4.0.0-beta.2",
        "tslib": "^2.4.0",
        "typescript": "^4.9.4",
        "userscript-meta": "^1.0.1",
        "vite": "^4.0.0"
    },
    "dependencies": {
        "file-saver": "^2.0.5",
        "imagesloaded": "^5.0.0",
        "jszip": "=3.9.1",
        "lodash": "^4.17.21",
        "nprogress": "^0.2.0",
        "sweetalert2": "^11.6.15",
        "tinycolor2": "^1.4.2"
    },
    "browserslist": {
        "production": [
            ">20.0%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "printWidth": 100
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2020,
            "project": [
                "./tsconfig.json"
            ]
        },
        "env": {
            "browser": true,
            "es6": true,
            "greasemonkey": true
        },
        "extends": [
            "airbnb-base",
            "airbnb-typescript/base",
            "prettier"
        ],
        "plugins": [
            "import",
            "prettier",
            "@typescript-eslint"
        ],
        "settings": {
            "import/resolver": {
                "node": {
                    "extensions": [
                        ".js",
                        ".ts",
                        ".jsx",
                        ".tsx",
                        ".json"
                    ]
                }
            },
            "import/extensions": [
                ".js",
                ".ts",
                ".mjs",
                ".jsx",
                ".tsx"
            ]
        },
        "rules": {
            "prettier/prettier": [
                "warn"
            ],
            "no-console": "warn",
            "import/extensions": [
                "error",
                "always",
                {
                    "pattern": {
                        "jsx": "never",
                        "tsx": "never",
                        "ts": "never",
                        "js": "never"
                    }
                }
            ],
            "no-param-reassign": [
                "error",
                {
                    "props": false
                }
            ]
        }
    },
    "eslintIgnore": [
        "node_modules",
        "*.min.js",
        "dist/**",
        "gulpfile*.js",
        "Manga_OnlineViewer.meta.js",
        "Manga_OnlineViewer.user.js",
        "Manga_OnlineViewer_Adult.meta.js",
        "Manga_OnlineViewer_Adult.user.js"
    ]
}
