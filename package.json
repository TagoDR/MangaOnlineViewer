{
  "name": "mangaonlineviewer",
  "description": "Userscript that helps to read Manga faster by loading all the pages at once",
  "version": "46.0.0",
  "scripts": {
    "start": "vite --host",
    "build": "vite build --mode dev",
    "build:standalone": "vite build --mode standalone",
    "release": "vite build --mode main && vite build --mode adult && vite build --mode standalone",
    "check": "biome check --write ./src",
    "lint": "biome lint --write ./src",
    "format": "biome format --write .",
    "ci": "biome ci ./src",
    "storybook": "storybook dev -p 6006"
  },
  "author": "TagoDR",
  "license": "MIT",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TagoDR/MangaOnlineViewer.git"
  },
  "keywords": ["manga", "reader", "viewer", "online", "loader"],
  "bugs": "https://github.com/TagoDR/MangaOnlineViewer/issues",
  "homepage": "https://github.com/TagoDR/MangaOnlineViewer#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@storybook/addon-docs": "^9.1.13",
    "@storybook/web-components-vite": "^9.1.13",
    "@types/file-saver": "^2.0.7",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.9.0",
    "@types/nprogress": "^0.2.3",
    "@types/tampermonkey": "^5.0.5",
    "@vueless/storybook-dark-mode": "^9.0.9",
    "rollup-plugin-external-globals": "^0.13.0",
    "storybook": "^9.1.13",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "userscript-metadata-generator": "^0.2.4",
    "vite": "^7.1.11",
    "vite-plugin-banner": "^0.8.1",
    "vite-plugin-singlefile": "^2.3.0",
    "vite-svg-loader": "^5.1.0"
  },
  "dependencies": {
    "@braintree/sanitize-url": "^7.1.1",
    "@gerhobbelt/keyscss": "^1.1.3-6",
    "@moaqzdev/toast": "^1.4.0",
    "@nanostores/lit": "^0.2.3",
    "@nanostores/logger": "^1.0.0",
    "blob-util": "^2.0.2",
    "bowser": "^2.12.1",
    "colorjs.io": "^0.5.2",
    "file-saver": "^2.0.5",
    "hotkeys-js": "^3.13.15",
    "jszip": "=3.9.1",
    "lit": "^3.3.1",
    "lodash": "^4.17.21",
    "nanostores": "^1.0.1",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "toolcool-range-slider": "^4.0.28"
  },
  "browserslist": ["defaults and fully supports es6-module", "maintained node versions"],
  "prettier": {
    "overrides": [
      {
        "files": "*.svg",
        "options": {
          "parser": "html"
        }
      }
    ],
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "arrowParens": "avoid",
    "endOfLine": "crlf",
    "singleAttributePerLine": true
  }
}
